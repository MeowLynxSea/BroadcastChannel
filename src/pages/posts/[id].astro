// ç§»é™¤ç¬¬ä¸€è¡Œæ ‡é¢˜ï¼ˆå¦‚æœå­˜åœ¨ï¼‰
function removeTitleFromContent(content) {
  // æ£€æŸ¥æ˜¯å¦æœ‰@å¼€å¤´çš„æ ‡é¢˜
  let plainText = content
