---
import '../assets/normalize.css'
import '../assets/style.css'
import '../assets/global.css'
import Layout from '../layouts/single-column.astro'
import Header from '../components/header.astro'
import PostCard from '../components/post-card.astro'
import { Image } from 'astro:assets'
import { getChannelInfo } from '../lib/telegram'

// 深拷贝 channel 对象，避免被其他页面的 SEO 设置污染
const channel = JSON.parse(JSON.stringify(await getChannelInfo(Astro)))
const posts = channel.posts ?? []
const recentPosts = posts.slice(0, 5) // 显示最近5篇文章

// 设置页面 SEO
channel.seo = {
  title: '首页',
  text: channel?.description
}
---

<Layout channel={channel}>
  <!-- 个人信息卡片 -->
  <section class="profile-card nb-box">
    <div class="profile-header">
      <div class="avatar-container nb-box">
        <Image
          src={channel?.avatar || '/void.png'}
          alt={channel?.title}
          class="profile-avatar"
          width={120}
          height={120}
          loading="eager"
        />
      </div>
      <div class="profile-info">
        <h1 class="profile-title">
          <i class="ri-user-line" style="color: var(--accent-color); margin-right: 8px;"></i>
          {channel?.title}
          <span class="cursor-blink">_</span>
        </h1>
        {channel?.description && <div class="profile-description nb-box" set:html={channel.descriptionHTML} />}
      </div>
    </div>
  </section>

  <!-- 近期文章部分 -->
  <section class="recent-posts nb-box">
    <div class="section-header">
      <h2 class="section-title">
        <i class="ri-article-line" style="color: var(--accent-color); margin-right: 8px;"></i>
        最近更新
      </h2>
      <div style="flex-grow: 1; border-bottom: 1px dashed var(--fg-color);"></div>
    </div>
    <div class="posts-grid">
      {recentPosts.map((post, index) => <PostCard post={post} class={`nb-box fade-in-up delay-${index}`}/>)}
    </div>

    {
      posts.length > recentPosts.length && (
        <div class="view-more fade-in-up">
          <a href="/posts" class="btn btn-primary">
            查看所有文章 ->
          </a>
        </div>
      )
    }
  </section>
</Layout>

<style>
  @keyframes blink { 50% { opacity: 0; } }

  .cursor-blink {
    color: var(--accent-color);
    animation: blink 1s infinite;
  }

  .profile-card {
    padding: 40px;
    margin-bottom: 40px;
    background-color: var(--bg-color);
    border: var(--border-width) solid var(--fg-color);
    box-shadow: var(--shadow-distance) var(--shadow-distance) 0 var(--fg-color);
    position: relative;
  }

  .profile-card:hover {
    transform: translate(-2px, -2px);
    box-shadow: calc(var(--shadow-distance) + 2px) calc(var(--shadow-distance) + 2px) 0 var(--accent-color);
    transition: 0.2s ease;
  }

  .profile-header {
    display: flex;
    align-items: center;
    gap: 30px;
    max-width: 800px;
    margin: 0 auto;
  }

  .avatar-container {
    display: inline-block;
    border: var(--border-width) solid var(--fg-color);
    padding: 4px;
    background-color: var(--bg-color);
    box-shadow: var(--shadow-distance) var(--shadow-distance) 0 var(--fg-color);
  }

  .avatar-container:hover {
    transform: translate(-1px, -1px);
    box-shadow: calc(var(--shadow-distance) + 1px) calc(var(--shadow-distance) + 1px) 0 var(--accent-color);
    transition: 0.2s ease;
  }

  .profile-avatar {
    width: 120px;
    height: 120px;
    border-radius: 0px;
    border: var(--border-width) solid var(--fg-color);
    object-fit: cover;
  }

  .profile-info {
    flex: 1;
  }

  .profile-title {
    font-size: 32px;
    font-weight: 900;
    margin: 0 0 16px 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
    font-family: var(--font-sans);
    text-transform: uppercase;
    display: flex;
    align-items: center;
  }

  .profile-description {
    font-size: 16px;
    line-height: 1.6;
    color: var(--secondary-color);
    padding: 16px;
    background-color: var(--code-background-color);
    border: var(--border-width) solid var(--fg-color);
    font-family: var(--font-mono);
  }

  .recent-posts {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px;
    background-color: var(--bg-color);
    border: var(--border-width) solid var(--fg-color);
    box-shadow: var(--shadow-distance) var(--shadow-distance) 0 var(--fg-color);
  }

  .recent-posts:hover {
    transform: translate(-2px, -2px);
    box-shadow: calc(var(--shadow-distance) + 2px) calc(var(--shadow-distance) + 2px) 0 var(--accent-color);
    transition: 0.2s ease;
  }

  .section-header {
    display: flex;
    align-items: center;
    border-bottom: var(--border-width) solid var(--fg-color);
    padding-bottom: 10px;
    margin-bottom: 30px;
    margin-top: 0;
  }

  .section-title {
    font-size: 24px;
    font-weight: 900;
    margin-bottom: 0;
    letter-spacing: -0.02em;
    font-family: var(--font-sans);
    text-transform: uppercase;
    background: var(--fg-color);
    color: var(--bg-color);
    padding: 5px 15px;
    margin-right: 15px;
  }

  .posts-grid {
    display: grid;
    gap: 32px;
  }

  .view-more {
    text-align: center;
    margin-top: 40px;
  }

  @media (max-width: 768px) {
    .profile-header {
      flex-direction: column;
      text-align: center;
      gap: 20px;
    }

    .profile-title {
      font-size: 28px;
      justify-content: center;
    }

    .recent-posts {
      padding: 20px;
    }

    .post-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }
  }

  /* 添加延迟动画类 */
  .delay-0 { animation-delay: 0.1s; }
  .delay-1 { animation-delay: 0.2s; }
  .delay-2 { animation-delay: 0.3s; }
  .delay-3 { animation-delay: 0.4s; }
  .delay-4 { animation-delay: 0.5s; }
</style>
