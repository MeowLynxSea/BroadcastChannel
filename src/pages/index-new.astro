---
import Layout from '../layouts/single-column.astro'
import Header from '../components/header.astro'
import Item from '../components/item.astro'
import { getChannelInfo } from '../lib/telegram'

const channel = await getChannelInfo(Astro)
const posts = channel.posts ?? []
const recentPosts = posts.slice(0, 5) // 显示最近5篇文章
---

<Layout channel={channel}>
  <!-- 个人信息卡片 -->
  <section class="profile-card">
    <div class="profile-header">
      <img src={channel?.avatar || '/void.png'} alt={channel?.title} class="profile-avatar" width="120" height="120" />
      <div class="profile-info">
        <h1 class="profile-title">{channel?.title}</h1>
        {channel?.description && <div class="profile-description" set:html={channel.descriptionHTML} />}
      </div>
    </div>
  </section>

  <!-- 近期文章部分 -->
  <section class="recent-posts">
    <h2 class="section-title">Recent Posts</h2>
    <div class="posts-grid">
      {
        recentPosts.map((post) => (
          <article class="post-card">
            <div class="post-header">
              <time datetime={post.datetime} class="post-date">
                {new Date(post.datetime).toLocaleDateString('zh-CN', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
              {post.tags && post.tags.length > 0 && (
                <div class="post-tags">
                  {post.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
            <div class="post-content" set:html={post.content} />
            <div class="post-footer">
              <a href={`/posts/${post.id}`} class="read-more">
                阅读全文
              </a>
            </div>
          </article>
        ))
      }
    </div>

    {
      posts.length > recentPosts.length && (
        <div class="view-more">
          <a href="/before/100" class="view-more-btn">
            查看更多文章
          </a>
        </div>
      )
    }
  </section>
</Layout>

<style>
  .profile-card {
    padding: 40px 0;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 40px;
  }

  .profile-header {
    display: flex;
    align-items: center;
    gap: 30px;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .profile-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 2px solid var(--border-color);
    object-fit: cover;
  }

  .profile-info {
    flex: 1;
  }

  .profile-title {
    font-size: 32px;
    font-weight: 600;
    margin: 0 0 16px 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .profile-description {
    font-size: 16px;
    line-height: 1.6;
    color: var(--secondary-color);
  }

  .recent-posts {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .section-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 32px;
    letter-spacing: -0.02em;
    position: relative;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--border-color);
  }

  .posts-grid {
    display: grid;
    gap: 32px;
  }

  .post-card {
    background-color: var(--background-color);
    border: 1px solid var(--border-color);
    border-radius: var(--box-border-radius);
    padding: 24px;
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--foreground-color);
  }

  .post-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
  }

  .post-date {
    font-size: 14px;
    color: var(--secondary-color);
    font-weight: 500;
  }

  .post-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 12px;
    color: var(--foreground-color);
    background-color: var(--code-background-color);
    padding: 4px 12px;
    border: 1px solid var(--border-color);
    text-decoration: none;
    font-weight: 500;
  }

  .post-content {
    font-size: 15px;
    line-height: 1.6;
    margin-bottom: 16px;
    color: var(--foreground-color);
  }

  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    margin-top: 20px;
    margin-bottom: 12px;
    font-weight: 600;
  }

  .post-content :global(p) {
    margin-bottom: 16px;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--box-border-radius);
    border: 1px solid var(--border-color);
  }

  .post-content :global(a) {
    color: var(--foreground-color);
    border-bottom: 1px solid var(--border-color);
    transition: border-color 0.2s ease;
  }

  .post-content :global(a:hover) {
    border-bottom-color: var(--foreground-color);
  }

  .post-footer {
    text-align: right;
  }

  .read-more {
    color: var(--foreground-color);
    font-weight: 500;
    font-size: 14px;
    text-decoration: none;
    border-bottom: 1px solid var(--border-color);
    transition: border-color 0.2s ease;
  }

  .read-more:hover {
    border-bottom-color: var(--foreground-color);
  }

  .view-more {
    text-align: center;
    margin-top: 40px;
  }

  .view-more-btn {
    display: inline-block;
    padding: 12px 24px;
    background-color: var(--foreground-color);
    color: var(--background-color);
    font-weight: 500;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .view-more-btn:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .profile-header {
      flex-direction: column;
      text-align: center;
      padding: 0 20px;
      gap: 20px;
    }

    .profile-title {
      font-size: 28px;
    }

    .recent-posts {
      padding: 0 20px;
    }

    .post-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }
  }
</style>
