---
import Layout from '../layouts/single-column.astro'
import { getEnv } from '../lib/env'
import { getChannelInfo } from '../lib/telegram'

// 深拷贝 channel 对象，避免被其他页面的 SEO 设置污染
const channel = JSON.parse(JSON.stringify(await getChannelInfo(Astro)))

// 设置页面 SEO
channel.seo = {
  title: '搜索',
  text: '搜索站内内容'
}

const GOOGLE_SEARCH_SITE = getEnv(import.meta.env, Astro, 'GOOGLE_SEARCH_SITE')
const searchAction = GOOGLE_SEARCH_SITE ? 'https://www.google.com/search' : '/search/result'
---

<Layout channel={channel}>
  <!-- 页面标题 -->
  <section class="search-page nb-box">
    <div class="search-container">
      <h1 class="search-title">
        <i class="ri-search-line" style="color: var(--accent-color); margin-right: 8px;"></i>
        搜索
        <span class="cursor-blink">_</span>
      </h1>
      <p class="search-description nb-box">
        <i class="ri-information-line" style="color: var(--accent-color); margin-right: 8px;"></i>
        搜索站内内容，查找感兴趣的文章
      </p>

      <form class="search-form-main" action={searchAction} method="get">
        {GOOGLE_SEARCH_SITE ? <input type="hidden" name="as_sitesearch" value={GOOGLE_SEARCH_SITE} /> : null}
        <div class="search-input-wrapper nb-box">
          <input
            type="text"
            name="q"
            placeholder="输入搜索关键词..."
            class="search-input"
            id="search-input"
            autofocus
          />
          <button type="submit" class="btn btn-primary search-button">
            <i class="ri-search-line" style="margin-right: 8px;"></i>
            搜索
          </button>
        </div>
      </form>

      <div class="search-tips nb-box">
        <h3 class="search-tips-title">
          <i class="ri-lightbulb-line" style="color: var(--accent-color); margin-right: 8px;"></i>
          搜索提示
        </h3>
        <ul>
          <li><i class="ri-checkbox-circle-line" style="color: var(--accent-color); margin-right: 8px;"></i> 使用关键词搜索相关文章</li>
          <li><i class="ri-checkbox-circle-line" style="color: var(--accent-color); margin-right: 8px;"></i> 支持中文和英文搜索</li>
          <li><i class="ri-checkbox-circle-line" style="color: var(--accent-color); margin-right: 8px;"></i> 搜索结果按相关度排序</li>
        </ul>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('search-input');

    // 聚焦搜索框
    if (searchInput) {
      searchInput.focus();
    }

    // 回车提交搜索
    const searchForm = document.querySelector('.search-form-main');
    if (searchForm) {
      searchForm.addEventListener('submit', (e) => {
        const query = searchInput.value.trim();
        if (!query) {
          e.preventDefault();
          searchInput.focus();
        }
      });
    }
  });
</script>

<style>
  @keyframes blink { 50% { opacity: 0; } }

  .cursor-blink {
    color: var(--accent-color);
    animation: blink 1s infinite;
  }

  .search-page {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
  }

  .search-container {
    max-width: 600px;
    width: 100%;
    text-align: center;
  }

  .search-title {
    font-size: 42px;
    font-weight: 900;
    margin: 0 0 16px 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
    color: var(--fg-color);
    font-family: var(--font-sans);
    text-transform: uppercase;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .search-description {
    font-size: 18px;
    color: var(--secondary-color);
    margin: 0 0 48px 0;
    line-height: 1.6;
    padding: 16px;
    background-color: var(--code-background-color);
    border: var(--border-width) solid var(--fg-color);
    font-family: var(--font-mono);
    text-transform: uppercase;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
    text-decoration: none;
  }

  .search-form-main {
    margin-bottom: 48px;
  }

  .search-input-wrapper {
    display: flex;
    overflow: hidden;
    background-color: var(--bg-color);
    border: var(--border-width) solid var(--fg-color);
    box-shadow: var(--shadow-distance) var(--shadow-distance) 0 var(--fg-color);
    padding: 4px;
  }

  .search-input-wrapper:focus-within {
    border-color: var(--accent-color);
    box-shadow: calc(var(--shadow-distance) + 2px) calc(var(--shadow-distance) + 2px) 0 var(--accent-color);
    transform: translate(-2px, -2px);
    transition: all 0.2s ease;
  }

  .search-input {
    flex: 1;
    padding: 16px 20px;
    border: none;
    outline: none;
    background: transparent;
    font-size: 16px;
    color: var(--fg-color);
    font-family: var(--font-mono);
    text-transform: uppercase;
  }

  .search-input::placeholder {
    color: var(--secondary-color);
  }

  .search-button {
    padding: 16px 24px;
    font-size: 16px;
    cursor: pointer;
  }

  .search-tips {
    text-align: left;
    background-color: var(--code-background-color);
    border: var(--border-width) solid var(--fg-color);
    padding: 24px;
    box-shadow: var(--shadow-distance) var(--shadow-distance) 0 var(--fg-color);
  }

  .search-tips:hover {
    transform: translate(-2px, -2px);
    box-shadow: calc(var(--shadow-distance) + 2px) calc(var(--shadow-distance) + 2px) 0 var(--accent-color);
    transition: 0.2s ease;
  }

  .search-tips-title {
    font-size: 18px;
    font-weight: 900;
    margin: 0 0 16px 0;
    color: var(--fg-color);
    font-family: var(--font-sans);
    text-transform: uppercase;
    display: flex;
    align-items: center;
  }

  .search-tips ul {
    margin: 0;
    padding: 0;
    list-style: none;
    color: var(--secondary-color);
    line-height: 1.6;
  }

  .search-tips li {
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    font-family: var(--font-mono);
    text-transform: uppercase;
  }

  .search-tips li:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .search-title {
      font-size: 36px;
    }

    .search-description {
      font-size: 16px;
    }

    .search-input {
      padding: 14px 16px;
      font-size: 16px;
    }

    .search-button {
      padding: 14px 20px;
      font-size: 16px;
    }

    .search-tips {
      padding: 20px;
    }
  }
</style>
