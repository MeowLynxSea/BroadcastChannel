---
// User Info Modal Component - NEO-BRUTALISM Style
// Handles user information collection for comments

interface UserInfoModalProps {
  postId: string
  content?: string
}

const { postId, content = '' } = Astro.props
---

<div id={`user-info-modal-${postId}`} class="user-info-modal hidden" role="dialog" aria-modal="true" aria-labelledby="modal-title">
  <div class="modal-backdrop"></div>
  <div class="modal-content nb-box">
    <header class="modal-header">
      <h3 id="modal-title">发表评论前请填写信息</h3>
      <button type="button" class="modal-close btn" aria-label="关闭">
        ×
      </button>
    </header>

    <form action={`/api/comments/${postId}/preflight`} method="POST" class="user-info-form">
      <input type="hidden" name="content" value={content}>

      <div class="form-group">
        <label for={`user-name-${postId}`} class="input-label">昵称 *</label>
        <input
          type="text"
          id={`user-name-${postId}`}
          name="userName"
          required
          maxlength="50"
          placeholder="请输入您的昵称"
          pattern=".{1,50}"
          title="昵称长度1-50个字符"
          class="nb-input"
        >
      </div>

      <div class="form-group">
        <label for={`user-email-${postId}`} class="input-label">邮箱 *</label>
        <input
          type="email"
          id={`user-email-${postId}`}
          name="userEmail"
          required
          placeholder="请输入您的邮箱地址"
          class="nb-input"
        >
      </div>

      <div class="form-actions">
        <button type="submit" class="submit-btn btn btn-primary">
          确定
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  .user-info-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s ease;
  }

  .user-info-modal.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 85, 0, 0.9);
    backdrop-filter: grayscale(100%) contrast(1.2);
  }

  .modal-content {
    position: relative;
    background: var(--bg-color);
    border: 3px solid var(--fg-color);
    padding: 32px;
    max-width: 500px;
    width: 90%;
    box-shadow: 10px 10px 0 var(--fg-color);
    transform: translateY(0);
    transition: transform 0.2s ease;
    animation: pop-in 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  @keyframes pop-in {
    from { transform: scale(0.8); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
  }

  .user-info-modal.hidden .modal-content {
    transform: translateY(20px);
  }

  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    border-bottom: var(--border-width) solid var(--fg-color);
    padding-bottom: 10px;
  }

  .modal-header h3 {
    margin: 0;
    font-size: 1.3rem;
    font-weight: 900;
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: -0.5px;
    color: var(--fg-color);
    position: relative;
  }

  .modal-header h3::after {
    content: "_";
    color: var(--accent-color);
    animation: blink 1s infinite;
    margin-left: 8px;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  .modal-close {
    font-size: 18px;
    font-weight: bold;
    padding: 6px 10px;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-mono);
  }

  .form-actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    margin-top: 32px;
    padding-top: 20px;
    border-top: var(--border-width) solid var(--fg-color);
  }

  @media (max-width: 640px) {
    .modal-content {
      padding: 24px;
      margin: 16px;
    }

    .form-actions {
      flex-direction: column;
      gap: 12px;
    }

    .form-actions .submit-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
