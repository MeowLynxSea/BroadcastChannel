---
import Layout from '../layouts/single-column.astro'
import { getEnv } from '../lib/env'
import { getChannelInfo } from '../lib/telegram'
import PostCard from '../components/post-card.astro'

// 深拷贝 channel 对象，避免被其他页面的 SEO 设置污染
const { SITE_URL } = Astro.locals
const channel = JSON.parse(JSON.stringify(await getChannelInfo(Astro)))
const posts = channel.posts ?? []
const GOOGLE_SEARCH_SITE = getEnv(import.meta.env, Astro, 'GOOGLE_SEARCH_SITE')

// 设置页面 SEO
channel.seo = {
  title: '文章',
  text: `浏览 ${channel?.title} 的所有文章`
}
---

<Layout channel={channel}>
  <!-- 页面标题 -->
  <section class="page-header nb-box">
    <div class="page-header-content">
      <h1 class="page-title">
        <i class="ri-article-line" style="color: var(--accent-color); margin-right: 8px;"></i>
        所有文章
      </h1>
      {channel?.descriptionHTML && <div class="page-description nb-box" set:html={channel.descriptionHTML} />}
    </div>
  </section>

  <!-- 文章列表 -->
  <section class="posts-list nb-box">
    <div class="section-header">
      <h2 class="section-title">
        <i class="ri-list-check" style="color: var(--accent-color); margin-right: 8px;"></i>
        文章列表
      </h2>
      <div style="flex-grow: 1; border-bottom: 1px dashed var(--fg-color);"></div>
    </div>
    <div class="posts-container">
      {posts.map((post, index) => <PostCard post={post} class={`nb-box fade-in-up delay-${index % 5}`}/>)}
    </div>

    <!-- 分页导航 -->
    <div class="pagination-container">
      <div class="pagination-info">
        <i class="ri-information-line" style="color: var(--accent-color); margin-right: 8px;"></i>
        显示最近 {posts.length} 篇文章
      </div>
      <div class="pagination-nav">
        <a href={`${SITE_URL}before/${posts[posts.length - 1]?.id}`} class="btn btn-primary">
          <i class="ri-arrow-left-line" style="margin-right: 8px;"></i>
          加载更早的文章
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes blink { 50% { opacity: 0; } }

  .page-header {
    text-align: center;
    padding: 40px;
    margin-bottom: 40px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .page-header-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .page-title {
    font-size: 36px;
    font-weight: 900;
    margin: 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
    font-family: var(--font-sans);
    text-transform: uppercase;
    display: flex;
    align-items: center;
  }

  .page-description {
    font-size: 16px;
    line-height: 1.6;
    color: var(--secondary-color);
    padding: 16px;
    background-color: var(--code-background-color);
    border: var(--border-width) solid var(--fg-color);
    font-family: var(--font-mono);
  }

  .posts-list {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px;
  }

  .section-header {
    display: flex;
    align-items: center;
    border-bottom: var(--border-width) solid var(--fg-color);
    padding-bottom: 10px;
    margin-bottom: 30px;
  }

  .section-title {
    font-size: 24px;
    font-weight: 900;
    margin-bottom: 0;
    font-family: var(--font-sans);
    text-transform: uppercase;
    background: var(--fg-color);
    color: var(--bg-color);
    padding: 5px 15px;
    margin-right: 15px;
  }

  .posts-container {
    display: grid;
    gap: 32px;
    margin-bottom: 60px;
  }

  .pagination-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
    padding: 40px 0;
    border-top: var(--border-width) solid var(--fg-color);
  }

  .pagination-info {
    font-size: 14px;
    color: var(--secondary-color);
    text-align: center;
    font-family: var(--font-mono);
    text-transform: uppercase;
    font-weight: bold;
    display: flex;
    align-items: center;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 30px 20px;
    }

    .page-title {
      font-size: 28px;
      justify-content: center;
    }

    .posts-list {
      padding: 20px;
    }

    .pagination-container {
      padding: 30px 20px;
    }

    .pagination-nav {
      display: flex;
      flex-direction: column;
      width: 100%;
      gap: 12px;
    }

    .btn {
      width: 80%;
      margin: 0 auto;
      text-align: center;
    }
  }

  /* 添加延迟动画类 */
  .delay-0 { animation-delay: 0.05s; }
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.15s; }
  .delay-3 { animation-delay: 0.2s; }
  .delay-4 { animation-delay: 0.25s; }
</style>
